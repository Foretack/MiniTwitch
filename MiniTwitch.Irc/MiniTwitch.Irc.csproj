<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <PackageId>MiniTwitch.Irc</PackageId>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageVersion>2.0.0</PackageVersion>
    <Version>2.0.0</Version>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>MiniTwitch.Irc</Title>
    <Description>High performance async library for Twitch IRC</Description>
    <Authors>occluder</Authors>
    <RepositoryUrl>https://github.com/occluder/MiniTwitch</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>IRC;Twitch;Bots;Client;Events;Chat</PackageTags>
    <PackageReleaseNotes>Changelog available at: https://github.com/occluder/MiniTwitch/blob/master/MiniTwitch.Irc/CHANGELOG.md</PackageReleaseNotes>
    <license>MIT</license>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>icon256.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <IsAotCompatible>true</IsAotCompatible>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\icon256.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MiniTwitch.Common\MiniTwitch.Common.csproj" />
  </ItemGroup>

</Project>
